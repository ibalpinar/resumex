const mongoose = require('mongoose');
const { Schema, model } = mongoose;

const ForgorPasswordRequestSchema = new Schema({
   userId: {
      type: Schema.Types.ObjectId,
      ref: 'User'
   },
   requestToken: {
      type: String,
      trim: true
   },
   expiredAt: {
      type : Date,
      default: Date.now,
      trim: true
   },
   createdAt: {
      type : Date,
      default: Date.now,
      trim: true
   },
   updatedAt: {
      type : Date,
      default: null,
      trim: true
   },
   deletedAt: {
      type : Date,
      default: null,
      trim: true
   }
});

const ForgorPasswordRequest = model('ForgorPasswordRequest', ForgorPasswordRequestSchema);

module.exports = ForgorPasswordRequest;
